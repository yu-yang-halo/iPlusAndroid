<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="连接到WIFI设备"
            style="@style/hylfontStyle"
            android:background="@drawable/button_alph_bg"
            android:textColor="@drawable/button_font_color_long"
            android:id="@+id/towifiDeviceBtn" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/layoutSSID"
        android:weightSum="1">


        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ssid"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/ssidEdit"
            android:textColor="@color/black"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
        android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
        android:id="@+id/layoutPASS"
    android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="密码"
            android:gravity="center"
            android:id="@+id/textView2"
            android:textColor="@color/black"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/passEdit"
            android:layout_weight="0.8"
            android:lines="1"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:inputType="textPassword" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/layoutConfig"
        android:gravity="center">


        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="配置到WIFI设备"
            style="@style/hylfontStyle"
            android:background="@drawable/button_alph_bg"
            android:textColor="@drawable/button_font_color_long"
            android:id="@+id/configBtn" />
    </LinearLayout>
</LinearLayout>
