<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Sn1.Widget.ActionMode" parent="@android:style/Theme.Holo">
        <item name="android:actionModeBackground">@color/yellow</item>
        <item name="android:actionModeCloseButtonStyle">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

   <style name="hylfontStyle">
       <item name="android:textSize">20sp</item>
   </style>

    </resources>
